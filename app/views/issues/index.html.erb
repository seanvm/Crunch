<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<% @issues.each do |issue| %>
  <div class="list-group">
    <%= link_to((issue), class: "list-group-item active") do %>
      <h4 class="list-group-item-heading"><%= issue.title %> (Sev-<%= issue.severity %>)</h4>
      <p class="list-group-item-text"><%= issue.description %></p>
      <p class="list-group-item-text">Created:<%= issue.created_at %></p>
      <p class="list-group-item-text">Due:<%= issue.sla_countdown %></p>
    <% end %>
  </div>
<% end %>

<br>

<%= link_to 'New Issue', new_issue_path %>
